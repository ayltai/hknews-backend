{
    "apps" : [{
        "name"               : "hknews-backend",
        "script"             : "java",
        "interpreter"        : "none",
        "args"               : "-server -Xverify:none -Xms240m -Xmx480m -Xss512k -XX:+CMSParallelRemarkEnabled -XX:+ScavengeBeforeFullGC -XX:+CMSScavengeBeforeRemark -Dfile.encoding=UTF-8 -Dserver.ssl.key-store-password=${SSL_KEY} -Dserver.ssl.trust-store-password=${SSL_KEY} -jar ./build/libs/hknews-backend-1.2.2.jar --spring.profiles.active=production",
        "instances"          : 1,
        "autorestart"        : true,
        "watch"              : false,
        "max_memory_restart" : "512M"
    }]
}
